<div class="container">
  <div class="col-xs-6">
    <div id="pusher-key" style="display:none;"><%= Pusher.key %></div>
		<h4><%= @question.content %></h4>
		<% if @question.choices.any? %>
		  <% @question.choices.each do |choice| %>
		  	<%= div_for choice do %>
		    	<%= choice.content %>
		    	<%= link_to 'Delete Choice', choice, method: :delete, data: {confirm: "Are you sure?"} %>
		    	<p class='vote-count'>
		    		<% if choice.votes.any? %>
			    		Votes: <%= choice.votes.count %>
			    	<% end %>
		    	</p>
		  	<% end %>
		  <% end %>

		  <% if any_votes? @question %>
		  	<%= link_to 'Clear Votes', clear_votes_path, data: {confirm: "Are you sure? This will delete all votes for all of this question's choices."} %>
		  <% end %>
		<% end %>

		<%= link_to 'Add Choice', new_question_choice_path(@question), class: 'form-control btn btn-info' %>
		<%= link_to "Back to #{@question.event.title}", event_path(@question.event.id), class: 'form-control btn btn-info' %>
  </div>
</div>